set fenc=utf-8
set nobackup
set noswapfile
set nocompatible
set autoread
set number
set hidden
set showcmd
set title
set tabstop=4
set list
set cursorline
set smartindent
set showmatch
set mouse=a
set laststatus=2

filetype off

" folding
set foldmethod=indent
set foldlevel=10
set foldcolumn=3

" color scheme
colorscheme molokai
